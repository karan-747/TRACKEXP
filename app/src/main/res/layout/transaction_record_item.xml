<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white">

    <ImageView
        android:id="@+id/ivTransRecImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvTransCat"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/ic_dish" />

    <TextView
        android:id="@+id/tvTransCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="5dp"
        android:gravity="bottom"
        android:text="InvestMent"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tvTransAmnt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivTransRecImg"
        app:layout_constraintTop_toTopOf="@+id/ivTransRecImg" />

    <TextView
        android:id="@+id/tvTransDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24/06/2023"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivTransRecImg"
        app:layout_constraintStart_toStartOf="@+id/tvTransCat"
        app:layout_constraintTop_toBottomOf="@+id/tvTransCat" />

    <TextView
        android:id="@+id/tvTransAmnt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="- â‚¹500000"
        android:textAlignment="textEnd"
        android:textColor="@color/my_color_5"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvTransCat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvTransCat"
        app:layout_constraintTop_toTopOf="@+id/tvTransCat" />

    <TextView
        android:id="@+id/tvTransMode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:text="Cash"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivTransRecImg"
        app:layout_constraintEnd_toEndOf="@+id/tvTransAmnt"
        app:layout_constraintStart_toStartOf="@+id/tvTransAmnt"
        app:layout_constraintTop_toBottomOf="@+id/tvTransAmnt" />

</androidx.constraintlayout.widget.ConstraintLayout>